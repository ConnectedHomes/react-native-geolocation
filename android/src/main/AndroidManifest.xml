<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.reactlibrary">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application>
        <service
                android:name="co.uk.hive.reactnativegeolocation.geofence.GeofenceHeadlessJsTaskService"
                android:exported="false"/>

        <service
                android:name="co.uk.hive.reactnativegeolocation.geofence.GeofenceTransitionJobService"
                android:permission="android.permission.BIND_JOB_SERVICE"
                android:exported="false"/>

        <receiver
                android:name="co.uk.hive.reactnativegeolocation.geofence.GeofenceBroadcastReceiver"
                android:exported="false"/>
    </application>
</manifest>
  